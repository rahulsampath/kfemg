
INCLUDE = -I.. ${ML_INCLUDE_DIRS}

LIBS = -L../common/lib -lcommon ${ML_LIBRARY_DIRS} ${ML_LIBRARIES} ${ML_TPL_LIBRARIES}

EXEC = bin/testSmoothing bin/testEigenValue2d bin/testEigenValue1d bin/testAMG

all : $(EXEC)

./src/amgUtils.o: ./src/amgUtils.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/testAMG.o: ./src/testAMG.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/testSmoothing.o: ./src/testSmoothing.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/testEigenValue2d.o: ./src/testEigenValue2d.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/testEigenValue1d.o: ./src/testEigenValue1d.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/testAMG : ./src/testAMG.o ./src/amgUtils.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testSmoothing : ./src/testSmoothing.o ./src/amgUtils.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testEigenValue2d : ./src/testEigenValue2d.o ./src/amgUtils.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testEigenValue1d : ./src/testEigenValue1d.o ./src/amgUtils.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)

