
INCLUDE = -I.. 

EXEC = bin/testRead bin/testGaussQuad 

all : $(EXEC)

./src/gaussQuad.o: ./src/gaussQuad.C
	$(SCC) -c $(INCLUDE) $< -o $@

./src/commonUtils.o: ./src/commonUtils.C
	$(SCC) -c $(INCLUDE) $< -o $@

./src/testRead.o: ./src/testRead.C
	$(SCC) -c $(INCLUDE) $< -o $@

./src/testGaussQuad.o: ./src/testGaussQuad.C
	$(SCC) -c $(INCLUDE) $< -o $@

bin/testRead : ./src/testRead.o ./src/commonUtils.o
	$(SCC) $^ -o $@ 

bin/testGaussQuad : ./src/testGaussQuad.o ./src/commonUtils.o ./src/gaussQuad.o 
	$(SCC) $^ -o $@ 

myclean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)


