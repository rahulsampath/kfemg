
INCLUDE = -I.. ${PETSC_INCLUDE}

LIBS = -L../common/lib -lcommon ${PETSC_LIB}

EXEC = bin/testGMG 

all : $(EXEC)

./src/%.o: ./src/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/testGMG : ./src/testGMG.o ./src/gmgUtils.o ./src/intergrid.o ./src/assembly.o \
		./src/boundary.o ./src/mesh.o ./src/solver.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)


