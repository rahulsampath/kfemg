
INCLUDE = -I.. ${PETSC_CC_INCLUDES} 

LIBS = -L../common/lib -lcommon ${PETSC_LIB}

EXEC = bin/test1 bin/myTest bin/testMMS bin/testBlkKmat bin/testFDPC

all : $(EXEC)

./src/%.o: ./src/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/test/%.o: ./src/test/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/test1 : ./src/test/test1.o ./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/myTest : ./src/test/myTest.o ./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testFDPC : ./src/test/testFDPC.o ./src/solver.o ./src/intergrid.o ./src/mms.o \
	./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testMMS : ./src/test/testMMS.o ./src/solver.o ./src/intergrid.o ./src/mms.o \
	./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testBlkKmat : ./src/test/testBlkKmat.o ./src/assembly.o ./src/boundary.o \
		  ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf ./src/test/*~ ./src/test/*.o  
	rm -rf $(EXEC)


