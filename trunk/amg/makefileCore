
INCLUDE = -I.. ${ML_INCLUDE_DIRS}

LIBS = ${ML_LIBRARY_DIRS} ${ML_LIBRARIES} ${ML_TPL_LIBRARIES}

EXEC = bin/testAMG 

all : $(EXEC)

./src/amgUtils.o: ./src/amgUtils.C
	$(PCC) -c $(INCLUDE) $< -o $@

./src/testAMG.o: ./src/testAMG.C
	$(PCC) -c $(INCLUDE) $< -o $@

bin/testAMG : ./src/testAMG.o ./src/amgUtils.o 
	$(PCC) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)


