
INCLUDE = -I.. ${PETSC_CC_INCLUDES} 

LIBS = -L../common/lib -lcommon ${PETSC_LIB}

EXEC = bin/testMMS bin/testC0
#bin/testNewMMS

all : $(EXEC)

./src/%.o: ./src/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/test/%.o: ./src/test/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/testNewMMS : ./src/test/testNewMMS.o ./src/newRtgPC.o ./src/newSmoother.o ./src/intergrid.o ./src/mms.o \
	./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testMMS : ./src/test/testMMS.o ./src/rtgPC.o ./src/smoother.o ./src/intergrid.o ./src/mms.o \
	./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testC0 : ./src/test/testC0.o ./src/intergrid.o ./src/mms.o \
	./src/assembly.o ./src/boundary.o ./src/mesh.o ./src/gmgUtils.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf ./src/test/*~ ./src/test/*.o  
	rm -rf $(EXEC)


