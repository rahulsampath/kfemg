
INCLUDE = -I.. ${PETSC_CC_INCLUDES} 

LIBS = -L../common/lib -lcommon ${PETSC_LIB}

EXEC = bin/testGMG bin/testApprox

all : $(EXEC)

./src/%.o: ./src/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/testGMG : ./src/testGMG.o ./src/gmgUtils.o ./src/intergrid.o ./src/assembly.o \
		./src/mms.o ./src/boundary.o ./src/mesh.o ./src/solver.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

bin/testApprox : ./src/testApprox.o ./src/gmgUtils.o ./src/mms.o ./src/mesh.o 
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)


