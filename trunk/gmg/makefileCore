
INCLUDE = -I.. ${PETSC_INCLUDE}

LIBS = -L../common/lib -lcommon ${PETSC_LIB}

EXEC = bin/testGMG 

all : $(EXEC)

./src/intergrid.o: ./src/intergrid.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/gmgUtils.o: ./src/gmgUtils.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./src/testGMG.o: ./src/testGMG.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

bin/testGMG : ./src/testGMG.o ./src/gmgUtils.o ./src/intergrid.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)


