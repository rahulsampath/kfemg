
INCLUDE = -I.. 

ARCHIVES = ./lib/libcommon.a 

LIBS = -L./lib -lcommon 

EXEC = bin/testRead bin/testGaussQuad 

all : ${ARCHIVES} $(EXEC)

./src/%.o: ./src/%.C
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

./lib/libcommon.a: ./src/commonUtils.o ./src/gaussQuad.o 
	${AR} ${AR_FLAGS} $@ $^
	${RANLIB} $@

bin/testRead : ./src/testRead.o  
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS)

bin/testGaussQuad : ./src/testGaussQuad.o  
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS)

clean :
	rm -rf ./src/*~ ./src/*.o  
	rm -rf $(EXEC)

clobber : clean
	rm -rf  $(ARCHIVES)


